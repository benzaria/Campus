{
    "name": "campus",
    "version": "1.0.0",
    "author": "benzaria",
    "description": "Campus",
    "license": "CC BY-NC-ND 4.0",
    "main": "./electron/main.js",
    "type": "module",
    "maintainers": [
        {
            "name": "benzaria",
            "email": "benz.github@gmail.com",
            "url": "https://github.com/benzaria"
        }
    ],
    "homepage": "https://Med-Campus.github.io",
    "scripts": {
        "start": "electron ./src",
        "app": "electron ./src/app",
        "host": "vite --host",
        "test": "electron ./test",
        "api:mail": "node src/apis/mailer.js",
        "api:db": "node src/apis/database.js",
        "api:strg": "node src/apis/storage.js",
        "dist": "electron-builder",
        "dist:win": "electron-builder -w",
        "dist:mac": "electron-builder -m",
        "dist:linux": "electron-builder -l",
        "dist:All": "electron-builder -wml",
        "start:vite": "concurrently \"npm run host\" \"npm run electron\"",
        "build": "vite build",
        "super": "electron ./src --supervisor",
        "uglify": "uglifyjs --config-file UglifyJS.json"
    },
    "keywords": [],
    "dependencies": {
        "bulma": "^1.0.3",
        "cheerio": "^1.0.0",
        "dotenv": "^16.4.7",
        "google-auth-library": "^9.15.0",
        "googleapis": "^144.0.0",
        "jquery": "^3.7.1",
        "marked": "^15.0.4",
        "node-cron": "^3.0.3",
        "nodemailer": "^6.9.16"
    },
    "devDependencies": {
        "electron": "^33.2.1",
        "electron-builder": "^25.1.8",
        "vite": "^6.0.6"
    }
}
